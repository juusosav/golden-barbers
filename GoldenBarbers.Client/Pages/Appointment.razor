@using GoldenBarbers.Client.Services;
@using System.Threading.Tasks
@using Shared.DTOs
@using GoldenBarbers.Client.Helpers

@inject BarberService BarberService
@inject OfferingService OfferingService
@inject TimeslotService TimeslotService
@inject AppointmentsService AppointmentsService

@page "/book-appointment"

<div class="booking-container">
    <h2 class="booking-text">Book an Appointment</h2>
    <br />
</div>


<EditForm Model="@appointment" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <div class="booking-container">
        <label class="booking-text">Select Service: </label>
        <br />

        <InputSelect @bind-Value="SelectedOfferingId">
            <option value="">-- Select --</option>

            @if (offerings != null)
            {
                @foreach (var o in offerings)
                {
                    <option value="@o.Id">@o.Name</option>
                }
            }
            else
            {
                <option>----------</option>
            }
        </InputSelect>

        <br /><br />

        <label class="booking-text">Select Barber: </label>
        <br />

        <div class="barber-selection">

            @if (barbers != null)
            {
                @foreach (var b in barbers)
                {
                    @if (_selectedBarberId == b.Id)
                    {
                        <div>
                            <div class="barber-selected" @onclick="() => SelectBarber(b.Id)">

                                <img style="width: 100px" src="@b.Portrait" alt="Barber" />
                                <p>@b.Name</p>
                                <p>@b.PositionName</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div>
                            <div class="barber-selection-item" @onclick="() => SelectBarber(b.Id)">

                                <img style="width: 100px" src="@b.Portrait" alt="Barber" />
                                <p>@b.Name</p>
                                <p>@b.PositionName</p>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
    <br />
    <br />

    @if (_selectedBarberId != Guid.Empty && _selectedOfferingId != Guid.Empty)
    {
        <div class="booking-text">
            <button type="button" @onclick="PrevWeek">⬅ Previous Week</button>
            <span>@weekStart.ToString("MMM dd, yyyy") - @weekEnd.ToString("MMM dd, yyyy")</span>
            <button type="button" @onclick="NextWeek">Next Week ➡</button>
        </div>

        @if (timeslots == null || barbers == null)
        {
            <p class="custom-loader">Loading calendar...</p>
        }
        else
        {
            <table class="calendar-table">
                <thead>
                    <tr>
                        <th>Time</th>
                        @foreach (var day in Enumerable.Range(0, 7))
                        {
                            var currentDay = weekStart.AddDays(day);
                            <th>@currentDay.ToString("ddd dd")</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var time in timeRanges)
                    {

                        <tr>
                            <td>@time.ToString("HH:mm")</td>

                            @foreach (var day in Enumerable.Range(0, 7))
                            {
                                var currentDate = weekStart.AddDays(day);
                                var currentDateTime = currentDate.Date.Add(time.TimeOfDay);

                                var daySlots = timeslots
                                .Where(s =>
                                s.Start.Date == currentDate.Date &&
                                s.Start.TimeOfDay == time.TimeOfDay &&
                                s.BarberId == appointment.BarberId &&
                                s.IsAvailable)
                                .ToList();

                                <td>
                                    @if (!daySlots.Any())
                                    {
                                        <span class="unavailable">Reserved</span>
                                    }

                                    else
                                    {
                                        @foreach (var slot in daySlots)
                                        {
                                            <button class="timeslot" type="button"
                                                    @onclick="() => SelectSlot(slot)">

                                                @(selectedSlot?.Id == slot.Id ? "Selected!" : "Select")
                                            </button>
                                            <br />
                                        }
                                    }
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        }

        @if (selectedSlot != null)
        {
            <div class="booking-container">
                <div class="booking-summary">
                    <h3>Appointment Information</h3>
                    <br />

                    @if (barbers != null)
                    {
                        <p>Barber: @barbers.First(b => b.Id == selectedSlot.BarberId).Name</p>

                    }

                    @if (offerings != null && barbers != null)
                    {
                        var selectedBarber = barbers.First(b => b.Id == selectedSlot.BarberId);
                        var selectedOffering = offerings.First(o => o.Id == appointment.OfferingId);

                        int price = selectedBarber.PositionId switch
                        {
                            1 => selectedOffering.SeniorPrice,
                            2 => selectedOffering.JuniorPrice,
                            3 => selectedOffering.TraineePrice,
                            _ => 0
                        };

                        <p>Price: @price €</p>
                    }


                    @if (offerings != null && appointment.OfferingId != Guid.Empty)
                    {
                        var selectedOffering = offerings.FirstOrDefault(o => o.Id == appointment.OfferingId);
                        <p>Service: @selectedOffering?.Name</p>
                    }

                    <p>Time: @selectedSlot.Start.ToString("dddd, MMM dd yyyy HH:mm")</p>
                </div>
            </div>
        }
        <br />

        @if (selectedSlot != null)
        {
            <div class="booking-container">
                <div class="booking-text">
                    <h3>Contact information: </h3>
                    <br />
                    <label>
                        Your name:
                        <InputText @bind-Value="appointment.CustomerName"></InputText>
                        <ValidationMessage For="@(() => appointment.CustomerName)" />
                    </label>
                    <br /><br />
                    <label>
                        Your email:
                        <InputText @bind-Value="appointment.CustomerEmail"></InputText>
                        <ValidationMessage For="@(() => appointment.CustomerEmail)" />

                    </label>
                    <br /><br />
                    <button class="btn btn-light" type="submit">Confirm Booking</button>
                </div>
            </div>
        }
    }
</EditForm>

@code {
    AppointmentDto appointment = new();

    private List<OfferingDto>? offerings;
    private List<BarberDto>? barbers;
    private List<TimeslotDto>? timeslots;
    private TimeslotDto? selectedSlot;

    private Guid _selectedBarberId;

    private Guid SelectedBarberId
    {
        get => _selectedBarberId;
        set
        {
            if (_selectedBarberId != value)
            {
                _selectedBarberId = value;
                appointment.BarberId = value;
                selectedSlot = null;
            }
        }
    }

    private Guid _selectedOfferingId;

    private Guid SelectedOfferingId
    {
        get => _selectedOfferingId;
        set
        {
            if (_selectedOfferingId != value)
            {
                _selectedOfferingId = value;
                appointment.OfferingId = value;
                selectedSlot = null;
            }
        }
    }

    private DateTime weekStart = DateTime.Today.StartOfWeek(DayOfWeek.Monday);
    private DateTime weekEnd => weekStart.AddDays(7);

    private List<DateTime> timeRanges = new();

    protected override async Task OnInitializedAsync()
    {
        offerings = await OfferingService.GetAllOfferingsAsync();
        barbers = await BarberService.GetBarbersAsync();

        GenerateTimeRanges();
        await LoadSlots();
    }

    private void SelectOffering(Guid offeringId)
    {
        SelectedOfferingId = offeringId;
    }

    private void SelectBarber(Guid barberId)
    {
        SelectedBarberId = barberId;
    }

    private async Task LoadSlots()
    {
        timeslots = await TimeslotService.GetWeeklySlotsAsync(weekStart);
        selectedSlot = null;
        StateHasChanged();

    }

    private void GenerateTimeRanges()
    {
        timeRanges.Clear();
        var startTime = weekStart.Date.AddHours(9);
        var endTime = weekStart.Date.AddHours(17);

        while (startTime < endTime)
        {
            timeRanges.Add(startTime);
            startTime = startTime.AddMinutes(30);
        }
    }

    private async Task PrevWeek()
    {
        weekStart = weekStart.AddDays(-7);
        await LoadSlots();
    }

    private async Task NextWeek()
    {
        weekStart = weekStart.AddDays(7);
        await LoadSlots();
    }

    private void SelectSlot(TimeslotDto timeslot)
    {
        selectedSlot = timeslot;
        appointment.BarberId = timeslot.BarberId;
        appointment.AppointmentDateTime = timeslot.Start;
        appointment.DurationMinutes = timeslot.Duration;
    }

    private void OnBarberChanged(ChangeEventArgs e)
    {
        appointment.BarberId = Guid.Parse(e.Value?.ToString() ?? Guid.Empty.ToString());
        selectedSlot = null;
    }


    public async Task HandleValidSubmit()
    {
        Console.WriteLine($"Booking: {appointment.BarberId} at {appointment.AppointmentDateTime}");

        if (selectedSlot == null)
            return;

        appointment.DurationMinutes = selectedSlot.Duration;

        await AppointmentsService.CreateAppointmentAsync(appointment);

        selectedSlot = null;
        appointment = new AppointmentDto();

        await LoadSlots();

    }
}
